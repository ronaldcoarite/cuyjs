<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../plataform/layout-xml.xsd'
    layout_width="match_parent"
    layout_height="match_parent"
    orientation="horizontal"
    background="res/drawable/bg_casa.png">
    <FrameLayout
        layout_width="150px"
        layout_height="match_parent"
        layout_marginLeft="20px">
        <ImageView
            layout_height="match_parent"
            layout_width="match_parent"
            src="res/drawable/bg_menu_rueda.png"/>
        <LinearLayout
            orientation="vertical"
            layout_width="match_parent">
            <ImageView
                src="res/drawable/home/ic_home.png"
                layout_height="50px"
                layout_width="60px"
                layout_marginTop="20px"
                layout_marginLeft="50px"
                layout_marginBottom="30px"
                onClick="onClickBuscarDispositivos"/>
            <ImageView
                src="res/drawable/home/ic_programas.png"
                layout_height="60px"
                layout_width="60px"
                layout_marginLeft="35px"
                layout_marginBottom="30px"
                onClick="onClickVerProgramas"/>
            <ImageView
                src="res/drawable/home/ic_home.png"
                layout_height="50px"
                layout_width="60px"
                layout_marginLeft="30px"
                layout_marginBottom="30px"/>
            <ImageView
                src="res/drawable/home/ic_home.png"
                layout_height="50px"
                layout_width="60px"
                layout_marginLeft="35px"
                layout_marginBottom="30px"/>
            <ImageView
                src="res/drawable/home/ic_home.png"
                layout_height="50px"
                layout_width="60px"
                layout_marginLeft="50px"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        layout_width="match_parent"
        layout_height="match_parent"
        layout_weight="1">
        <TextView
            layout_gravity="right|bottom"
            text="DOMOLIN Â© www.domolin.com"
            singleLine="true"
            textColor="#000000"
            textStyle="bold"
            layout_marginRight="10px"
            layout_marginBottom="10px"/>
        <LinearLayout
            orientation="vertical"
            id="linDevices"
            layout_width="match_parent"
            layout_height="match_parent">
        </LinearLayout>
    </FrameLayout>
</LinearLayout>