<?xml version="1.0" encoding="UTF-8"?>
<ViewGroup
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='https://raw.githubusercontent.com/ronaldcoarite/cuyjs/master/src/layout-xml.xsd'
    layout_width="match_parent"
    layout_height="match_parent"
    padding="10px"
    orientation="vertical"
    id="linPrueba">
    <LinearLayout
        orientation="vertical"
        layout_width="300px"
        layout_height="wrap_content"
        padding="34"
        background="#4d0000">
        <View
            layout_width="100px"
            layout_height="100px"
            background="#FF0000"/>
        <TextView
            layout_width="200px"
            layout_height="wrap_content"
            background="#000000"
            text="Vas por buen camino"
            singleLine="true"/>
        <View
            layout_width="150px"
            layout_height="120px"
            background="#808080"/>
    </LinearLayout>
</ViewGroup>